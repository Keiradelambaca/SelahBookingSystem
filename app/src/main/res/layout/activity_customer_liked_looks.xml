<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signaturePink">

    <!-- TOP TOOLBAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarLiked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:title="Liked Looks"
        android:background="@color/signaturePink"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@android:color/black"
        app:itemIconTint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GRID -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLikedLooks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbarLiked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EMPTY STATE -->
    <LinearLayout
        android:id="@+id/emptyLikedState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarLiked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="No liked looks yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Tap the heart on a look to save it here."
            android:textSize="14sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>